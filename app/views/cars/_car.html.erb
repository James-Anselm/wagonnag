<div class="car" id="car_id_<%=car.id%>">
  <div class="header clearfix">
    <%= link_to car, class: "name" do %>
        <%= car.get_display_name() %>
    <% end %>
  </div>
  <div class="odometer clearfix">
    <span class="odometer-title">Current odometer: </span>
    <span class="odometer-value"><%= car.odometer %></span>
    <span class="form-container"></span>
    <%= link_to(raw("<span class='glyphicon glyphicon-pencil edit-icon icon'></span>"), {controller: 'cars', action: 'get_update_odometer_form', id: car.id}, remote: true, class: 'update-odometer-link') %>
  </div>
  <% if car.get_expired_maintenance_items().count > 0 %>
      <div class="expired-maintenance-items-title">Maintenance items to check up on</div>
      <%= render(partial: 'maintenance_items/simple_maintenance_item', collection: car.get_expired_maintenance_items(), as: :maintenance_item) %>
  <% end %>
</div>