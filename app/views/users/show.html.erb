<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <h2>
        <%= @user.email %>
      </h2>
    </section>
  </aside>
  <%= link_to "Add a new car", new_car_path %>
  <div class="col-md-8">
    <% if @user.cars.any? %>
        <h3>Cars (<%= @user.cars.count %>)</h3>
        <div class="cars">
          <%= render @user.cars %>
        </div>
    <% end %>
  </div>
</div>