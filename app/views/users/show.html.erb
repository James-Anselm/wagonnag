<% provide(:title, @user.name) %>
<div class="cars <%= 'full-width' if !@expired_maintenance_items.any? %>">
  <% if @user.cars.any? %>
      <h3 class="clearfix">Cars (<%= @user.cars.count %>) <%= link_to raw("<span class='glyphicon glyphicon-plus'></span>"), new_car_path %></h3>
      <%= render @user.cars %>
  <% end %>
</div>
<% if @expired_maintenance_items.any? %>
  <div class="maintenance-items expired">
    <h3>Items due for checkup (<%= @expired_maintenance_items.count %>)</h3>
    <%= render @expired_maintenance_items %>
  </div>
<% end %>